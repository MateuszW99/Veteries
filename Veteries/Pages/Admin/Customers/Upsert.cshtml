@page
@model Veteries.Pages.Admin.Customers.UpsertModel

<form method="post" asp-action="Upsert">
    <div class="row px-2 backgroundWhite border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if(Model.CustomerObj.Id != 0)
        {
            <input type="hidden" asp-for="CustomerObj.Id" />
        }
        <div class="col-12 px-3" style="border-bottom:1px solid #325d88">
            <h2 class="text-primary">@(Model.CustomerObj.Id != 0 ? "Update" : "Add") Customer</h2>
        </div>

        <div class="col-8 pt-3">
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="CustomerObj.FirstName"></label>
                </div>
                <div class="col-9">
                    <input class="form-control" asp-for="CustomerObj.FirstName" />
                    <span class="text-danger" asp-validation-for="CustomerObj.FirstName"></span>
                </div>

                <div class="col-3">
                    <label asp-for="CustomerObj.LastName"></label>
                </div>
                <div class="col-9">
                    <input class="form-control" asp-for="CustomerObj.LastName" />
                    <span class="text-danger" asp-validation-for="CustomerObj.LastName"></span>
                </div>

                <div class="col-3">
                    <label asp-for="CustomerObj.PhoneNumber"></label>
                </div>
                <div class="col-9">
                    <input class="form-control" asp-for="CustomerObj.PhoneNumber" />
                    <span class="text-danger" asp-validation-for="CustomerObj.PhoneNumber"></span>
                </div>


                <div class="col-3">
                    <label asp-for="CustomerObj.EmailAddress"></label>
                </div>
                <div class="col-9">
                    <input class="form-control" asp-for="CustomerObj.EmailAddress" />
                    <span class="text-danger" asp-validation-for="CustomerObj.EmailAddress"></span>
                </div>

            </div>
            <div class="form-group row">
                <div class="col-9 offset-3">
                    <div class="row">
                        <div class="col-6">
                            <button type="submit" class="btn btn-success form-control">
                                @(Model.CustomerObj.Id != 0 ? "Update" : "Add")
                            </button>
                        </div>
                        <div class="col-6">
                            <a asp-page="./Index" class="btn btn-secondary form-control">Back to list</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
